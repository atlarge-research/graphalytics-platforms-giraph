<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<files>
		<!--Platform ReadMe files-->
		<file>
			<source>${project.basedir}/README.md</source>
			<outputDirectory>.</outputDirectory>
			<destName>README-graphalytics-${platform.name}.md</destName>
		</file>
		<!--Graphalytics platform driver JAR-->
		<file>
			<source>${project.basedir}/target/${project.artifactId}-${project.version}-default.jar</source>
			<outputDirectory>lib</outputDirectory>
			<destName>${project.artifactId}-${project.version}-default.jar</destName>
		</file>
	</files>
	<fileSets>
		<!--Platform configuration files-->
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>prepare-benchmark.sh</include>
				<include>config-template/**</include>
			</includes>
		</fileSet>
	</fileSets>


	<!--Core common files-->
	<dependencySets>
		<dependencySet>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*:resources</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>

</assembly>
